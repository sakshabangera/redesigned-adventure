#include<GL/glut.h>
void myInit()
{
glClearColor(1.0,1.0,1.0,0.0);
glClear(GL_COLOR_BUFFER_BIT);
glMatrixMode(GL_PROJECTION);
gluOrtho2D(0.0,200.0,0.0,200.0);
}
void line()
{
glLineWidth(3.0);
glColor3f(0,0,0);
glBegin(GL_LINES);
glVertex2i(10,10);
glVertex2i(10,50);
glEnd();
glBegin(GL_LINES);
glVertex2i(10,50);
glVertex2i(50,50);
glEnd();
glBegin(GL_LINES);
glVertex2i(10,10);
glVertex2i(50,10);
glEnd();
glBegin(GL_LINES);
glVertex2i(50,50);
glVertex2i(50,10);
glEnd();
glBegin(GL_LINES);
glVertex2i(80,50);
glVertex2i(80,10);
glEnd();
glBegin(GL_LINES);
glVertex2i(50,10);
glVertex2i(80,10);
glEnd();
glLineWidth(3.0);
glColor3f(1.0,0,0);
glBegin(GL_LINES);
glVertex2i(10,50);
glVertex2i(30,70);
glEnd();
glBegin(GL_LINES);
glVertex2i(50,50);
glVertex2i(30,70);
glEnd();
glBegin(GL_LINES);
glVertex2i(30,70);
glVertex2i(70,70);
glEnd();
glBegin(GL_LINES);
glVertex2i(50,50);
glVertex2i(80,50);
glEnd();
glBegin(GL_LINES);
glVertex2i(70,70);
glVertex2i(80,50);
glEnd();
glLineWidth(3.0);
glColor3f(0.45,1.0,0.78);
glBegin(GL_LINES);
glVertex2i(25,10);
glVertex2i(25,30);
glEnd();
glBegin(GL_LINES);
glVertex2i(45,30);
glVertex2i(45,10);
glEnd();
glBegin(GL_LINES);
glVertex2i(25,30);
glVertex2i(45,30);
glEnd();
glPointSize(10.0);
glColor3f(0,0,1.0);
glBegin(GL_POINTS);
glVertex2i(100,100);
glVertex2i(110,110);
glVertex2i(110,100);
glEnd();
glFlush();
}
void main(int argc,char *argv[])
{
glutInit(&argc,argv);
glutInitDisplayMode(GLUT_SINGLE|GLUT_RGB);
glutInitWindowPosition(100,100);
glutInitWindowSize(500,500);
glutCreateWindow("Displaying a line");
glutDisplayFunc(line);
myInit();
glutMainLoop();
}
